@{
    ViewBag.Title = "Fase de Selação";
    ViewBag.AngularApp = "FilmeApp";
    ViewBag.AngularController = "FilmeCtrl as vm";
}
<div class="fundo-tela cor-fundo" ng-init="vm.carregarFilmes()">
    <header class="form-control fundo-titulo">
        <p class="text-uppercase pre-titulo">Campeonato de filmes</p>
        <p class="titulo">Fase de Seleção</p>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <p class="sub-titulo">Selecione 16 filmes que você deseja que entrem na competição e depois pressione o botão GERAR MEU CAMPEONATO para prosseguir</p>
            </div>
            <div class="col-2"></div>
        </div>
    </header>

    <section class="form-control cor-fundo sem-borda">
        <div class="row">
            <div class="col-4"> Selecionados {{vm.filmesSelecionados.length}} de {{vm.quantidadeFilmesSelecionar}} Filmes</div>
            <div class="col-5"></div>
            <div class="col-3">
                <input class="btn btn-dark text-uppercase font-size-small"
                       id="btnCampeonato"
                       font-size-small name="GerarCampeonato"
                       title="Gerar Meu Campeonato"
                       type="button"
                       value="Gerar Meu Campeonato"
                       ng-click="vm.gerarCampeonato();" />
            </div>
        </div>
    </section>

    <section class="form-control cor-fundo sem-borda" ng-show="vm.listaFilmes.length < 0">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <p class="titulo-filme">Aguardo alguns instantes</p>
                <p class="titulo-filme">Carregando lista de Filmes</p>
            </div>
        </div>
    </section>

    <section class="form-control cor-fundo sem-borda">
        <div class="row">
            <div ng-class="{false:'panel-filme', true:'panel-filme-selecionado'}[filme.Selecionado]"
                 ng-click="vm.selecionar(filme)"
                 ng-repeat="filme in vm.listaFilmes">
                <div class="clearfix"></div>
                <div>
                    <p class="titulo-filme" title="{{filme.Titulo}}">{{filme.Titulo}}</p>
                    <p class="ano-filme">{{filme.AnoLancamento}}</p>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    @Scripts.Render("~/bundles/filmes")
    @Scripts.Render("~/bundles/ng-service")
}